html
    head
        title CRUD using NodeJS, Express and Mongoose (MongoDB)
        link(rel="stylesheet", href="/bower/bootstrap/dist/css/bootstrap.css")
        link(rel="stylesheet", href="/css/styles.css")
    body
        .container
            nav.navbar.navbar-expand-md.navbar-dark.bg-dark
              a.navbar-brand(href='/') NodeJS + MongoDB
              button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
              #navbarsExampleDefault.collapse.navbar-collapse
                ul.navbar-nav.mr-auto
                    if user
                      li.nav-item
                        a.nav-link(href='/country/add') Add Country
                ul.navbar-nav.navbar-rigth
                    if user
                        li.nav-item
                            a.nav-link(href="/user/logout") Logout
                    else
                        li.nav-item
                            a.nav-link(href="/user/register") Register
                        li.nav-item
                            a.nav-link(href="/user/login") Login
            br
            != messages("message", locals)
            if errors
                each error in errors
                    div.alert.alert-danger= error.msg
            block content
            br
            hr
